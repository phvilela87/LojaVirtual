<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_interest_list_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_weight="0.70"
            android:gravity="center"
            android:paddingBottom="12dip"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/product_interest_list_item_client_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_weight="0.70"
            android:gravity="center"
            android:paddingBottom="12dip"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/product_interest_list_item_product_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_weight="0.70"
            android:gravity="center"
            android:paddingBottom="12dip"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/product_interest_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_margin="4dip"
            android:layout_weight="0.70"
            android:gravity="center"
            android:paddingBottom="12dip"
            android:paddingTop="8dp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_product_interest_delete_item"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Excluir" />

        <Button
            android:id="@+id/button_product_interest_update_item"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Atualizar" />

    </LinearLayout>

</LinearLayout>