<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_detail_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/order_detail_list_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/order_detail_list_item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/order_detail_list_item_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/order_detail_list_item_product_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/order_detail_list_item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

</LinearLayout>