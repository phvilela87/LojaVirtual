<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_interest_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/product_interest_list_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/product_interest_list_item_client_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/product_interest_list_item_product_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/product_interest_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

</LinearLayout>