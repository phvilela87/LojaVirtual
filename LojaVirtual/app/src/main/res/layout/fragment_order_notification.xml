<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dm114.br.inatel.pvilela.lojavirtual.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Provedor de Vendas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dip"
                        android:layout_weight="0.70"
                        android:gravity="center"
                        android:paddingBottom="12dip"
                        android:paddingTop="8dip" />

                    <TableRow>

                        <TextView
                            android:text="Order ID:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/order_notification_order_ID"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Info Reason:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/order_notification_info_reason"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="User Email:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/order_notification_user_email"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="New Order Status:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/order_notification_new_order_status"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Username:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/order_notification_username"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Frete:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/order_notification_preco_frete"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ListView
        android:id="@+id/order_notification_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>