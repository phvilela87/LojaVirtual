<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dm114.br.inatel.pvilela.lojavirtual.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Provedor de Mensagens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dip"
                        android:layout_weight="0.70"
                        android:gravity="center"
                        android:paddingBottom="12dip"
                        android:paddingTop="8dip" />

                    <TableRow>

                        <TextView
                            android:text="ID:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_interest_notification_id"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Client Email:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_interest_notification_client_email"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Product ID:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_interest_notification_product_ID"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Preço:"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_interest_notification_price"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                </TableLayout>

                <TextView
                    android:text="Provedor de Vendas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dip"
                    android:layout_weight="0.70"
                    android:gravity="center"
                    android:paddingBottom="12dip"
                    android:paddingTop="8dip" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:text="ID:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_notification_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Nome:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_notification_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Descrição:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_notification_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Código:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_notification_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:text="Preço:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.1"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                        <TextView
                            android:id="@+id/product_notification_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dip"
                            android:layout_weight="0.70"
                            android:gravity="left"
                            android:paddingBottom="12dip"
                            android:paddingTop="8dip" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>







