<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/productListItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/productListItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/productListItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/productListItemCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

    <TextView
        android:id="@+id/productListItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:layout_weight="0.70"
        android:gravity="center"
        android:paddingBottom="12dip"
        android:paddingTop="12dip" />

</LinearLayout>